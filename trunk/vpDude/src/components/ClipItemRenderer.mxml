<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				width="100"
				height="75"
				>
		
	<fx:Script source="ClipItem.as" />

	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected" />
	</s:states>

	<s:VGroup>
		
	
		<s:BorderContainer borderColor="0x000000" borderWeight="1" horizontalCenter="0" verticalCenter="0">

		<!--<s:Label text="{clipname}" fontWeight="bold" horizontalCenter="center" width="100" height="28"/>-->
		<mx:Image id="imgUrl" alpha.hovered=".7" 
				  source.normal="{cachedThumbnail1}" 
				  source.hovered="{cachedThumbnail2}" 
				  source.selected="{cachedThumbnail3}" 
				  horizontalAlign="center"
				  verticalAlign="middle"
				  width="100" height="75" 
				  scaleContent="true"
				  mouseDown="imgUrl_mouseDownHandler(event)"
				  toolTip="Click to drag video"
				  />	
		<!--<mx:LinkButton id="viewClip" click="viewClip_clickHandler(event)" x="0" y="51" toolTip="View in default app" label="View" visible.hovered="true" visible.selected="true" visible.normal="false" />-->
		</s:BorderContainer>
	</s:VGroup>

</s:ItemRenderer>
