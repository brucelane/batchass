<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" 
					label="config" 
					>
	
	<fx:Script source="TabConfig.as" />
		<s:VGroup width="100%" paddingLeft="8" paddingRight="8" paddingTop="8" paddingBottom="8">
			<s:HGroup>
				<s:Label width="{lblWidth}" text="Configuration files path:" verticalAlign="middle"/>
				<s:TextInput width="{tiWidth}" text="videopong/config" id="configPath"/>
				<s:Button label="..." id="browseConfigPathBtn" width="30"/>			
			</s:HGroup>
			<s:HGroup>
				<s:Label width="{lblWidth}" text="Downloaded files path:" verticalAlign="bottom"/>
				<s:TextInput width="{tiWidth}" text="videopong/cache" id="cachePath"/>
				<s:Button label="..." id="browseCachePathBtn" width="30"/>			
			</s:HGroup>
			<s:HGroup>
				<s:Label width="{lblWidth}" text="User name:" verticalAlign="bottom"/>
				<s:TextInput width="{tiWidth}" text="guest" id="username"/>
			</s:HGroup>
			<s:HGroup>
				<s:Label width="{lblWidth}" text="Password:" verticalAlign="bottom"/>
				<s:TextInput width="{tiWidth}" text="" id="pwd" />
			</s:HGroup>
			<s:Button label="Apply" id="applyBtn" click="applyBtn_clickHandler(event)"/>
			
		</s:VGroup>

</s:NavigatorContent>